{
  "name": "npm-script",
  "version": "1.0.0",
  "description": "postcss,webpack",
  "author": "J.Y.",
  "license": "MIT",
  "scripts": {
    "serve": "browser-sync start --open=\"external\" --files \"**/*\" --proxy http://npm-script.example.test/ --logLevel silent",
    "scss": "node-sass www/css/style.scss www/css/style.css --importer node_modules/node-sass-globbing/index.js --output-style compressed",
    "autoprefixer": "postcss -u autoprefixer --autoprefixer.browsers '> 5%, ie 11' -r www/css/style.css --no-map",
    "build:css": "npm run scss && npm run autoprefixer",
    "watch:css": "nodemon -e scss -x \"npm run build:css\"",
    "build:js": "webpack www/js/main.js",
    "start": "concurrently --kill-others \"npm run serve\" \"npm run watch:css\" \"npm run build:js\""
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.2.2",
    "@babel/polyfill": "^7.2.5",
    "@babel/preset-env": "^7.3.1",
    "@webpack-cli/init": "^0.1.3",
    "autoprefixer": "^7.1.1",
    "babel-loader": "^8.0.5",
    "browser-sync": "^2.18.12",
    "concurrently": "^4.1.0",
    "node-sass": "^4.5.3",
    "node-sass-globbing": "0.0.23",
    "nodemon": "^1.18.10",
    "postcss": "^6.0.3",
    "postcss-cli": "^4.1.0",
    "webpack": "^4.29.3",
    "webpack-cli": "^3.2.3"
  }
}
